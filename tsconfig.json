{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "src/",
    "outDir": "web/js",
    "lib": [
      "DOM",
      "ES6"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}